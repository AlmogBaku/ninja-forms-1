{
    "name": "ninja-forms/ninja-forms-views",
    "description": "A submissions table display application for Ninja Forms integrated with the WordPress Block Editor.",
    "authors": [
        {
            "name": "Kyle Johnson",
            "email": "kyle@saturdaydrive.io"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests/",
        "lint": "composer run lint:compatibility",
        "lint:config": "phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "lint:compatibility": "phpcs ninja-forms-views.php --standard=PHPCompatibility --runtime-set testVersion 5.2",
        "wp:start": "docker-compose start",
        "wp:stop": "docker-compose stop",
        "wp:setup": "docker-compose up -d && composer run wp:install",
        "wp:install": "docker-compose run --rm cli wp core install --url=localhost:8228 --title=Views --admin_user=admin --admin_password=password --admin_email=admin@localhost.test"
    },
    "autoload": {
        "psr-4": {"NinjaForms\\Views\\": "includes/"}
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "3.*",
        "phpcompatibility/php-compatibility": "dev-master"
    }
}
